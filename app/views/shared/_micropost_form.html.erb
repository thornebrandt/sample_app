<%= form_for(@micropost) do |f| %>
	<% _maxLength = SampleApp::Application::MICROPOST_MAX_LENGTH %>
	<%= render 'shared/error_messages', object: f.object %>
	<p class="notice" id="characterLimit">&nbsp;</p>
	<div class="field">
		<%= f.text_area :content, placeholder: "Compose new micropost...", :maxlength => _maxLength %>
	</div>
	<%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>